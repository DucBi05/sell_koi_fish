@model KoiShop.Pages.IndexModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang trại quản lí bán cá koi </title>
    <link rel="stylesheet" href="~/css/style.css" />
</head>

<body>
    <div id="wrapper">
        <div id="header">
            <a href="" class="logo">
                <img src="img/logo2.webp" alt="">
            </a>
            <div id="menu">
                <div class="item">
                    <a href="">Trang chủ</a>
                </div>
                <div class="item">
                    <a href="">Blog</a>
                </div>
                <div class="item">
                    <a href="">Liên hệ</a>
                </div>
            </div>
            <div id="actions">
                <div class="item">
                    <img src="img/user.png" alt="">
                </div>
                <div class="item">
                    <img src="img/cars.png" alt="">
                </div>
            </div>
        </div>
        @RenderBody()
        <div id="banner">
            <div class="box-left">
                <h2>
                    <span>TRẠI CÁ KOI</span>
                    <br>
                    <span>HÀNG ĐẦU VIỆT NAM</span>
                </h2>
                <p>Chuyên cung cấp các giống cá koi Nhật nhập khẩu có chất lượng cao</p>
                <button>Mua ngay</button>
            </div>
            <div class="box-right">
                <img src="img/anh1.jpg" alt="">
                <img src="img/anh2.jpg" alt="">
                <img src="img/anh3.jpg" alt="">
            </div>
            <div class="to-bottom">
                <a href="">
                    <img src="img/button.png" alt="">
                </a>
            </div>
        </div>
        <div id="wp-products">
            <h2>SẢN PHẨM CỦA CHÚNG TÔI
                <form method="get">
                    <select class="form-select" asp-for="SelectedCategoryId" asp-items="@(new SelectList(Model.KoiCategoryList, "Id", "Name"))" onchange="this.form.submit()">
                        <option value="">Các loại cá koi</option>
                    </select>
                </form>
            </h2>
            <ul id="list-products">
                @foreach(var item in Model.FishList)
                {
                    <div class="item">
                        <img src="@Html.DisplayFor(modelItem => item.Image)" alt="">
                        <div class="name">
                            <p>Tên: @Html.DisplayFor(modelItem => item.Name)</p>
                        </div>
                        <div class="price">
                            <p>Giá: @Html.DisplayFor(modelItem => item.Price)</p>
                        </div>
                        <div class="btn-buy-fish">
                            <a asp-page="/FishPage/BuyFish" asp-route-id="@item.KoiId">
                                <button>Mua</button>
                            </a>
                        </div>
                    </div>
                }
            </ul>
        </div>

        <div id="saleoff">
            <div class="box-left">
                <h1>
                    <span>GIẢM GIÁ LÊN ĐẾN</span>
                    <span>45%</span>
                </h1>
            </div>
            <div class="box-right"></div>
        </div>

        <div id="comment">
            <h2>NHẬN XÉT CỦA KHÁCH HÀNG</h2>
            <div id="comment-body">
                <div class="prev">
                    <a href="#">
                        <img src="img/prev.png" alt="">
                    </a>
                </div>
                <ul id="list-comment">
                    <li class="item">
                        <div class="avatar">
                            <img src="img/avatar 1.png" alt="">
                        </div>
                        <div class="stars">
                            <span>
